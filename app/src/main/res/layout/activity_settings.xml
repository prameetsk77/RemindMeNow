<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/dark_bg_color"
    android:focusable="false"
    android:foregroundTint="#2da1c7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Notification Settings"

        android:textSize="15dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sound On"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp" />

        <Switch
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:switchMinWidth="100dp"
            android:id="@+id/switch1"
            android:layout_gravity="right"
            android:layout_weight="0.13"
            android:layout_marginRight="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vibration On"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="20dp" />

        <Switch
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:switchMinWidth="100dp"
            android:id="@+id/switch2"
            android:layout_gravity="right"
            android:layout_weight="0.13"
            android:layout_marginRight="15dp"
            android:checked="false" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reminder Settings"

        android:textSize="15dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weather Info On"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="20dp" />

        <Switch
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:switchMinWidth="100dp"
            android:id="@+id/switch3"
            android:layout_gravity="right"
            android:layout_weight="0.13"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contact Settings"

        android:textSize="15dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Us"
        android:id="@+id/textView5"

        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp" />



